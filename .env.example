# ============================================================
# Deadware Risk Scanner — Environment Configuration
# ============================================================
# Copy this file to .env.local and fill in your values.
# ============================================================

# ---- Site ----
NEXT_PUBLIC_SITE_URL=https://deadware-risk-scanner.vercel.app

# ---- Supabase (free tier — auth + database) ----
# Get from: https://supabase.com/dashboard → Project Settings → API
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# ---- Polar.sh (payments — free, supports Saudi Arabia) ----
# Access token: https://polar.sh/settings → Developers → Personal Access Tokens
# Product IDs: https://polar.sh/dashboard → Products
# Webhook secret: https://polar.sh/dashboard → Settings → Webhooks
POLAR_ACCESS_TOKEN=
POLAR_WEBHOOK_SECRET=
POLAR_ENVIRONMENT=sandbox

# Product IDs (used in checkout links + webhook plan detection)
NEXT_PUBLIC_POLAR_PRODUCT_ID_PRO=
NEXT_PUBLIC_POLAR_PRODUCT_ID_TEAM=

# ---- Pricing (displayed in the UI) ----
NEXT_PUBLIC_PRO_PRICE=9
NEXT_PUBLIC_TEAM_PRICE=29

# ---- Branding / Social ----
